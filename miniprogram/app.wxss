/**app.wxss**/
button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container{
  padding: 15rpx 30rpx;
}

.help-tip-title {
  margin-top: 100rpx;
  width: 100%;
  text-align: center;
  font-weight: bold;
}

.help-tip {
  width: 100%;
  text-align: center;
  color: #7a7a7a;
  margin-top: 30rpx;
}

.share-btn {
  margin-top: 50rpx;
}

/**form**/
.jeeform {
  width: 100%;
  background-color: #FFF;
}

.form-split {
  width: 100%;
  border-bottom: 1px solid #ECECEC;
}

.ux-form {
  width: 90%;
}

.form-group {
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #dfdfdf;
}

.form-label {
  color: #191919;
  width: 150rpx;
  padding-left: 15rpx;
  height: 60rpx;
  line-height: 60rpx;
  letter-spacing: 1rpx;
  flex-shrink:0;
}

.form-title{
  font-size: 32rpx;
  color: #7f7f7f;
  width: 100%;
}

.form-warn{
  font-size: 32rpx;
  color: #d81e06;
  width: 100%;
}

.form-control {
  height: 60rpx;
  line-height: 60rpx;
  color: #555;
  font-size: 32rpx;
  flex: 1;
}

.form-name {
  color: #7f7f7f;
  height: 40rpx;
  line-height: 60rpx;
  width: 180rpx;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.form-icon {
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  right: 60rpx;
  margin-top: 10rpx;
}

.form-img {
  width: 62rpx;
  height: 62rpx;
  margin: 6rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.form-btn {
  margin-top: 60rpx;
  letter-spacing: 2rpx;
}

.form-column{
  flex-direction: column;
  align-items: flex-start;
}

.form-editor {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.form-textarea{
    border: 1px solid #ECECEC;
    width: 100%;
    height:150rpx;
}

.ql-active {
  color: #22C704;
}

/**
* icon
**/
.icon-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  font-weight: normal;
  padding: 6rpx 12rpx;
  font-size:medium;
}

.icon-btn .icon{
  width:36rpx;
  height:36rpx;
  margin-top: -2rpx;
  margin-right: 3rpx;
}

/**
* modal
**/
.ux-mask{
  width: 100%;
  height: 100%;
  background: #CCC;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.8;
  z-index: 999;
  opacity: 0.8;
}

.ux-modal{
  width: 80%;
  height: 440rpx;
  position: fixed;
  top: 25%;
  left: 10%;
  z-index: 999;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 15rpx;
}
.ux-modal .modal-title{
  background-color: #555;
  width: 100%;
  height:80rpx;
  color: #FFF;
  display: flex;
  flex-direction: row;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  align-items: center;
  justify-content: left;
}
.ux-modal .modal-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.modal-content view{
  margin-bottom:15rpx;
}
.ux-modal .modal-footer{
  width: 100%;
  display: flex;
  flex-direction: row;
  border-top: 1px solid #ECECEC;
  justify-content: center;
  padding-top: 15rpx;
}
.ux-modal button{
  margin: 0rpx 40rpx;
}