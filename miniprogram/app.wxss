/**app.wxss**/
page {
  background: #f6f6f6;
}
navigator{
  width: 100%;
}

.container{
  padding: 15px;
  padding-top: 0px;
}

button {
  background: initial;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.help-tip-title {
  margin-top: 100rpx;
  width: 100%;
  text-align: center;
  font-weight: bold;
}

.help-tip {
  width: 100%;
  text-align: center;
  color: #7a7a7a;
  margin-top: 30rpx;
}

.share-btn {
  margin-top: 50rpx;
}

/**form**/
.jeeform {
  width: 100%;
  background-color: #FFF;
}
.form-split {
  width: 100%;
  border-bottom: 1px solid #ECECEC;
}
.form-group {
  padding: 30rpx 0rpx 10px 0px;
  display: flex;
  flex-direction: column;
  align-items: left;
  border-bottom: 1px solid #ECECEC;
}

.form-label {
  color: #2b2b2b;
  height: 60rpx;
  line-height: 60rpx;
  letter-spacing: 1rpx;
  margin-left:5rpx;
  margin-bottom: 6px;
}

.form-title{
  font-size: 32rpx;
  color: #7f7f7f;
  width: 100%;
}

.form-control {
  padding-left: 0px;
}

.form-name {
  color: #7f7f7f;
  height: 40rpx;
  line-height: 60rpx;
  width: 180rpx;
  letter-spacing: 1rpx;
}

.form-icon {
  position: absolute;
  width: 20rpx;
  height: 40rpx;
  right: 60rpx;
  margin-top: 10rpx;
}

.form-img {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  margin-bottom: 3rpx;
}

.form-btn {
  margin-top: 60rpx;
  letter-spacing: 2rpx;
}

.form-column{
  flex-direction: column;
  align-items: flex-start;
}

.form-editor {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #dfdfdf;
}

.ql-active {
  color: #22C704;
}

textarea{
  padding-left: -5px;
  margin-left: 0px;
}

/**
* icon
**/
.icon-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  font-weight: normal;
  padding: 6rpx 12rpx;
  border: 1px solid #22C704;
  color: #22C704;
  font-size:medium;
}

.icon-btn .icon{
  width:36rpx;
  height:36rpx;
  margin-top: -2rpx;
  margin-right: 3rpx;
}

.jeecard {
  flex: 1;
	display: flex;
	flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.jeecard .title{
  width: 100%;
  font-weight: bold;
  text-align: left;
  margin-top: 15rpx;
}

.jeecard-opt{
  margin-top: 30rpx;
  width: 100%;
  border-top: 1px solid #f6f6f6;
  padding-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.jeecard-opt button{
  border: none;
  background-color: #f6f6f6;
}

/**
管理
*/
.mng-header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top:80rpx;
  padding: 15px;
}

.mng-header .title{
  flex: 1;
  font-weight: bolder;
}

