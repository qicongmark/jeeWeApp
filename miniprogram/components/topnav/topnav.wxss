/* tap-nav */
.topnav{
  background: #fff;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-around;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.topnav-item{
  flex: 1;
  color: #aaa;
  text-align: center;
}
.topnav-active{
  background: #2aa515;
  color: #FFF;
  height: 80rpx;
}

