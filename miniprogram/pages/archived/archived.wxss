.container{
    margin-bottom: 30rpx;
}

.article-card {
    margin-bottom: 30rpx;
    background-color: #fff;
    border-radius: 6rpx;
    padding: 20rpx;
}

.article {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.article .title {
    width: 100%;
    text-align: left;
    margin-bottom: 15rpx;
    font-weight: bold;
}

.article-footer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
}

.comment {
    display: flex;
    flex-direction: row;
    color: #6a6a6a;
    font-size: 24rpx;
    flex: 1;
    align-items: center;
}

.comment image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
    margin-left: 12rpx;
}