<!--index.wxml-->
<wxs module="DateFormat" src="../../wxs/DateFormat.wxs"></wxs>

<view class="container">

  <!-- 文章展示 -->
  <view wx:for="{{articles}}" class="article-card">
    <navigator url="/pages/article/articleRead/articleRead?id={{item._id}}" class="article">
      <view class="title">{{item.title}}</view>
      <image class="article-img" wx:if="{{item.img}}" src="{{item.img}}" mode="widthFix"></image>
    </navigator>

    <view class="article-footer">
      <view class="time">{{DateFormat.formatTime(item.time)}}</view>
      <button class="icon-btn" open-type="share" style="width: auto;height:auto;">
        <image class="icon" mode="aspectFit" src="../../images/icon/wechat.png"></image>分享
      </button>
    </view>

