
.article-block{
  margin-bottom: 30rpx;
  padding: 20rpx;
}

.article-card {
  margin-top: 30rpx;
  padding-bottom: 30rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 6rpx;
}

.article-item {
  width: 95%;
}

.article-user{
  display: flex;
	flex-direction: row;
  align-items: center;
  justify-content:flex-start;
  width: 95%;
  padding-top: 10rpx;
}
.avatar {
	overflow: hidden;
	width: 80rpx;
	height: 80rpx;
	flex-shrink: 0;
	margin-right: 16rpx;
  border-radius: 50%;
}

.username {
	color: #5a6990;
	font-weight: bold;
  font-size: 16px;
  flex: 1;
}

.article {
  width: 100%;
	font-size: 32rpx;
	margin: 20rpx 0rpx;
}

.article-text {
	color: #000;
}