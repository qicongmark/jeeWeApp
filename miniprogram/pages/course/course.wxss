.container{
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx;
  align-items: center;
  justify-content: center;
}
.learn-title{
  text-align: center;
}
.learn-title view{
  margin-top: 40rpx;
  font-weight: bold;
  font-size: x-large;
}
.learn-desc{
  margin-top: 20rpx;
  text-align: center;
}
.learn-desc view{
  margin-top: 15rpx;
}

.learn-compony{
  margin-top: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.learn-compony image{
  width: 130rpx;
  height: 60rpx;
}

.learn-start{
  margin-top: 70rpx;
  background-color: #ffb238;
  width: 95%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-weight: bold;
  letter-spacing: 4rpx;
  font-size: large;
}

.learn-course{
  width: 95%;
  margin-top:50rpx;
}
.course{
  background-color: #d0d0d5;
  border: 2rpx solid #2b2b2b;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding:15rpx 20rpx;
  margin-bottom: 40rpx;
}
.course:hover{
  background-color: #ccc;
}

.course image{
  width: 64rpx;
  height: 64rpx;
}

.course view{
  font-size: larger;
  margin-left: 30rpx;
  letter-spacing: 1rpx;
}


