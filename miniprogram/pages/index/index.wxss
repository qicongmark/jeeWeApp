.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0rpx 30rpx;
    height: 100vh;
}

.banner {
    margin-top: 15rpx;
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.banner image {
    width: 100%;
    height: 300rpx;
    border-radius: 6rpx;
}

.interview {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-between;
    margin-top: 20px;
    width: 100%;
}

.interview image {
    border-radius: 6rpx;
    width: 335rpx;
    height: 165rpx;
}

.category {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 40rpx;
    width: 95%;
}

.c-item {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    justify-content: center;
    width: 25%;
    height: 70px;
}

.category image {
    width: 50rpx;
    height: 50rpx;
}

.c-name {
    font-size: 24rpx;
    margin-top: 6rpx;
}

.promp-block {
    padding: 20rpx;
    margin-top: 30rpx;
}

.title-block {
    display: flex;
    flex-direction: row;
}

.title {
    font-weight: bold;
    padding: 15rpx 20rpx;
    font-size: 32rpx;
}

.cur-title {
    color: #1aad19;
    border-bottom: 4rpx solid #1aad19;
}

.promp-sv {
    box-shadow: 0 0 5px #ddd;
    padding: 5rpx;
}

.promp {
    width: 100%;
    white-space: nowrap;
}

.p-item {
    width: 180rpx;
    height: 180rpx;
    background-color: #eee;
    margin: 10rpx;
    display: inline-block;
}

.p-item image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 6rpx;
}

.p-item view {
    text-align: center;
    font-size: 26rpx;
    width: 180rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.image-block {
    margin-top: 15rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.image-block image {
    width: 100%;
    border-radius: 5rpx;
}

.share-btn-block {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    flex-direction: row;
    margin: 0rpx;
    margin-top: 30rpx;
}

.search-group {
    margin-top: 70rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
}

.search-group button {
    border-radius: 0px;
    border-top-right-radius: 6rpx;
    border-bottom-right-radius: 6rpx;
}

.search-group input {
    height:30px;
    border: 1px solid #dbdbdb;
    background-color: #FFF;
    flex: 1;
    padding-left: 15rpx;
    border-top-left-radius: 6rpx;
    border-bottom-left-radius: 6rpx;
}

.q-panel{
  margin-top: 60rpx;
  background-color: #FFF;
  width: 90%;
  border-radius: 6rpx;
  padding-bottom: 30rpx;
}

.qa-title{
  font-weight: bold;
  margin: 30rpx;
  color: #6a6a6a;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.qa-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-weight: normal;
}
.qa-tip .tip{
  color: #6a6a6a;
  font-size: 24rpx;
}
.qa-tip .icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
}

.footer{
  margin-top: 90rpx;
  padding-bottom: 30rpx;
  color: #dbdbdb;
  font-weight: normal;
  font-size: 28rpx;
}