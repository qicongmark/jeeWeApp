page {
  background-color: #F6F6F6;
}

.container {
  height: 100vh;
  background: #F6F6F6;
  display: flex;
  flex-direction: row;
  padding: 0px;
}

.item-nav {
  min-width: 180rpx;
  text-align: center;
  height: 100vh;
}

.nav-item {
  background: #F6F6F6;
  color: #2b2b2b;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}

.active {
  background: #fff;
  color: #07c160;
}

.source-block {
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  justify-content: flex-start;
  background-color: #FFF;
  word-break: break-all;
}

.source-item {
  padding: 30rpx 20rpx;
  border-bottom: 30rpx solid #f6f6f6;
  background-color: #FFF;
}

.source-item-noborder {
  border-bottom: 30rpx solid #FFF;
}

.source-name {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.source-name .icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
  margin-right: 15rpx;
  border-radius: 5rpx;
}

.source-img {
  width: 100%;
  height: 240rpx;
  border-radius: 6rpx;
  margin-top: 10rpx;
}

.source-desc {
  margin-top: 20rpx;
  color: #6a6a6a;
  font-size: 28rpx;
}

.source-content {
  margin-top: 10rpx;
}

.source-btn-block {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  margin-top: 50rpx;
}

.comment {
  display: flex;
  flex-direction: row;
  color: #6a6a6a;
  font-size: 24rpx;
  align-items: center;
  margin-top: 30rpx;
}

.comment image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}