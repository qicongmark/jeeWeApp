
.container{
  background-color: #f6f6f6;
  height: 100vh;
  padding: 0rpx;
}
.user-header{
   width: 100%;
   padding: 30px 0rpx 50px 0rpx;
   background-image: linear-gradient(#b5d9f8, #f6f6f6);
   display: flex;
   flex-direction: row;
   align-content: center;
   align-items: center;
}
.user-avatar{
  width: 32px;
  height: 32px;
  margin: 0px 30rpx 0px 80rpx;
}
.user-info{
  margin-top: 12rpx;
}
.user-nickname{
  letter-spacing: 3rpx;
}
.user-type{
  margin-top: 10rpx;
  font-size: 24rpx;
  background-color: #efefef;
  border-radius: 15rpx;
  padding:6rpx 20rpx;
}

.ux-panel{
  background-color: #FFF;
  width: 100%;
  min-height:100rpx ;
  border-radius: 6rpx;
  display: block;
  margin-bottom: 40rpx;
  padding-bottom: 50rpx;
}
.panel-content{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-content: center;
  flex-wrap: wrap;
  margin-top: 20px;
}
.panel-content button{
  width: auto;
  margin: 0px 10px 0px 30px;
}
.panel-content text{
  text-align: center;
  display: block;
}
.panel-content .title{
  margin-top:4rpx;
  font-size: 24rpx;
  color: #999;
}
.ux-panel .panel-title {
  font-weight: bold;
  padding:40rpx 20rpx 0rpx 40rpx;
}
.ux-panel image{
  width: 64rpx;
  height: 64rpx;
}
.all-orders{
  float:right;
  font-weight:normal;
  font-size:28rpx;
  color: #999;
}
