.search-form{
  padding: 15rpx 30rpx;
  position: fixed;
  background-color: #F6F6F6;
  flex-direction: column;
}
.search-group{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-group input {
  background-color: #fff;
  padding-left:6px;
  border-radius:6rpx;
}

.search-group picker{
  background-color: #fff;
  padding-left:6px;
  border-radius:6rpx;
  margin: 0rpx 15rpx;
}

.container {
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  padding: 15rpx 30rpx;
  height: 100vh;
}
.work-card{
  margin: 15rpx 0rpx;
  background-color: #FFF;
  color: #2b2b2b;
  border-radius: 10rpx;
  padding-bottom: 25rpx;
}

.work-title-block{
  padding: 20rpx;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom:20rpx;
}
.work-title{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  width: 70%;
}
.work-item{
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.work-item view{
  width: 50%;
  text-align: left;
  color: #707070;
  flex-shrink: 0;
}

.odd-bg{
  background-color: #e8f5fc;
}

.work-item text{
  color:#2b2b2b;
}

.share-btn-block {
  position: fixed;
  right: 0rpx;
  bottom: 10px;
  display: flex;
  flex-direction: column;
}
.share-btn-block button{
  border-radius: 0;
  margin-top:30rpx;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}

.share-btn-block-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 50rpx;
}
.share-btn-block-row button{
  margin: 0px 30rpx;
}